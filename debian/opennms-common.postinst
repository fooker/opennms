#! /bin/sh
# postinst script for opennms-common
#
# vim:set ai et sts=4 sw=4 tw=0:

## create the OpenNMS group and user if it doesn't exist
getent group opennms >/dev/null 2>&1 || addgroup --system opennms
getent passwd opennms >/dev/null 2>&1 ||
    adduser --system --home /usr/share/opennms --no-create-home \
            --disabled-password --ingroup opennms opennms

case "$1" in
    configure)
      /usr/share/opennms/bin/fix-permissions.sh
      ;;
    *)
      ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
